{
	"compilerOptions": {
		"target": "ES2024",
		"module": "CommonJS",
		"rootDir": "./src",
		"moduleResolution": "node",
		"sourceMap": true,
		"noEmit": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
